@model LembreteModel
@{
    ViewData["Title"] = "Lembrete";
}


<div class="container">
    <form class="bg-form mt-5 form-defult shadow-lg" >
        <div class="row">            
            <div class="mt-3  mb-3 d-grid gap-2 col-12 mx-auto">
                <h1 class="text-center fw-bold display-6">Lembrete</h1>
            </div>
            <div class="mt-3 col-md-7 mb-2 form-  p-1">
                <label for="nome" class="form-label">Assunto</label>
                <input type="text" id="nome" class="form-control"  disabled value="@Model.Assunto" placeholder="Assunto">
                @Html.ValidationMessageFor(x => x.Assunto)
            </div>
            <div class=" col-md-5 mb-2 p-1 mt-3">
                <label for="example-date" class="form-label">Data do lembrete</label>
                <input class="form-control" id="example-date"   disabled value="@Model.DataDoLembrete.Date.ToString(" dd/MM/yyyy")" >
                @Html.ValidationMessageFor(x => x.DataDoLembrete)
            </div>



        </div>
        <div>
            <div class="mb-3 mb-3 p-1 ">
                <label for="example-textarea" class="form-label">Resumo</label>
                <textarea class="form-control" id="example-textarea"  disabled rows="5">@Model.Resumo</textarea>
            </div>

        </div>
        <div>
            <div class="mb-3 mb-3 p-1 ">
                <label for="example-textarea" class="form-label">Descriçao</label>
                <textarea class="form-control" id="example-textarea" disabled  rows="5">@Model.Descricao</textarea>
            </div>

        </div>




        <div class="d-grid gap-2 col-6 mx-auto">
            <a class="btn btn-warning btn-center" asp-controller="Lembrete" asp-action="Index">Voltar</a>
            <a class="btn  btn-editar btn-center text-white" asp-controller="Lembrete" asp-action="Editar" asp-route-id="@Model.Id">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z" />
                </svg><font style="vertical-align:inherit;" class="ms-1">Editar</font>
            </a>
        </div>
    </form>
</div>
