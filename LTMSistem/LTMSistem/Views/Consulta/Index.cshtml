@model ConsultaGerenicModel
@{
    ViewData["Title"] = "Lista de Usuários";
}



    <div class=" container d-grid gap-2 mt-4">
        <a class="btn btn-success   shadow" asp-controller="Consulta" asp-action="Criar" role="button">Adicionar</a>
    </div>
    <div class="container bg-white mt-5 rounded-2 shadow text-center p-2">
        <table class="table table-striped">
            <thead class="bg-navbar text-light">
                <tr>

                    <th scope="col">Dia</th>
                    <th scope="col">Horario</th>
                    <th scope="col">Termino</th>
                    <th scope="col">Procedimento</th>
                    <th scope="col">Dentista</th>
                    <th scope="col">Paciente</th>                   
                    <th scope="col"></th>                   

                </tr>
            </thead>


            <tbody class="table-group-divider">

                @if (Model != null && Model.Consultas.Any())
                {

                    @foreach (var consulta in Model.Consultas)
                    {

                        <tr>

                            <td>@consulta.DataConsulta.ToString("dddd")</td>
                            <td>@consulta.DataConsulta.ToString("HH:mm")</td>
                            <td>@consulta.DataFinal.ToString("HH:mm")</td>
                            <td>@consulta.Procedimento</td>
                            <td>@consulta.Dentista.Nome</td>
                            <td>@consulta.Paciente.Nome</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <a role="button" class="btn btn-danger" asp-controller="Consulta" asp-action="ApagarConfirmacao" asp-route-id="@consulta.Id">Cancelar</a>
                                    <a role="button" class="btn btn-success" asp-controller="Consulta" asp-action="Concluir" asp-route-id="@consulta.Id">Concluida</a>
                                    <a class="btn btn-primary" asp-controller="Consulta" asp-action="Mostrar" asp-route-id="@consulta.Id">Ver</a>
                                </div>
                            </td>


                        </tr>


                    }
                }




            </tbody>
        </table>
    </div>
</div>