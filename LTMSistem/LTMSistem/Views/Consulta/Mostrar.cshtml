@using LTMSistem.Enums
@using LTMSistem.Enuns
@model ConsultaModel
@{
    ViewData["Title"] = "Consulta";
}

<div class="container">
    <form class="bg-form mt-5 form-defult shadow-lg">
        <div class="row">
            <div class="mt-3  mb-3 d-grid gap-2 col-12 mx-auto">
                <h1 class="text-center fw-bold display-6">Consulta</h1>
            </div>

            <div class=" col-md-12 mb-2 p-1 mt-3">
                <label class="form-label" for="inputGroupSelect01">Dentista</label>
                <input class="form-control" id="example-date" disabled  value="@Model.Dentista.Nome">
                </select>
            </div>
            <div class=" col-md-7 mb-2 p-1 mt-3">
                <label for="example-date" class="form-label">Data da consulta</label>
                <input class="form-control" id="example-date" disabled value="@Model.DataConsulta.Date.ToString(" dd/MM/yyyy")">
            </div>
            <div class=" col-md-5 mb-2 p-1 mt-3">
                <label for="example-date" class="form-label">Horario</label>
                <input class="form-control" id="example-date" disabled value="@Model.DataConsulta.ToString("HH:mm")">
            </div>
            <div class=" col-md-5 mb-2 p-1 mt-3">
                <label for="example-date" class="form-label">Duração</label>
                <input class="form-control" id="example-date" disabled value="@Model.DuracaoConsulta.ToString("HH:mm")">
            </div>



            <div class=" col-md-7 mb-2 p-1 mt-3">
                <label class="form-label" for="inputGroupSelect01">Paciente</label>
                <input class="form-control" id="example-date" disabled value="@Model.Paciente.Nome">
            </div>






            <div class="mb-12 col-md-6  p-1">
                <label for="example-email" class="form-label">Procedimento</label>
                <input class="form-control" id="example-date" disabled value="@Model.Procedimento">              
            </div>


            <div class="mb-3 col-md-12  p-1">
                <label for="example-email" class="form-label">Obs</label>
                <textarea class="form-control" id="example-textarea" asp-for="Observacao" disabled rows="5">@Model.Observacao</textarea>
            </div>


        </div>



        <div class="d-grid gap-2 col-6 mx-auto">
            <a class="btn  btn-editar btn-center text-white" asp-controller="Consulta" asp-action="Editar" asp-route-id="@Model.Id ">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z" />
                </svg><font style="vertical-align:inherit;" class="ms-1">Editar</font>
            </a>
            <a class="btn btn-warning btn-center" asp-controller="Consulta" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
