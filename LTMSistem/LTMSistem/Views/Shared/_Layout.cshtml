<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LTMSistem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LTMSistem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/app.css" />
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/responsivo.css" />
    <link rel="stylesheet" href="~/css/agenda.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body class=" bg-default" onload="renderDate()">
        <header>
            <nav class="navbar navbar-expand-lg  navbar-light  shadow-sm " style="background-color: #bf89bb;"
                 aria-label="Tenth navbar example">
                @await Component.InvokeAsync("Menu")
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-primary fade show position-fixed fixed-bottom " role="alert">
                <button type="button" class="btn btn-success btn-sm btn btn-close " data-bs-dismiss="alert" aria-label="Close"></button>
                @TempData["MensagemSucesso"]
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger fade show position-fixed fixed-bottom w-100" role="alert">
                <button type="button" class="btn btn-danger btn-sm btn btn-close " data-bs-dismiss="alert" aria-label="Close"></button>
                @TempData["MensagemErro"]
            </div>
        }

       @* <footer class="footer position-fixed fixed-bottom bg-navbar">
            <div class="container text-light">
                &copy; 2022 - LTMSistem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/agenda.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
