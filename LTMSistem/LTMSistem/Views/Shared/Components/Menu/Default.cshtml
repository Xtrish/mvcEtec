@model UsuarioModel



<div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample08"
            aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08">
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link text-light dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">@Model.Perfil</a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item" asp-controller="AlterarSenha" asp-action="Index">Alterar Senha</a>
                    </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Agenda" asp-action="MostraAgenda">Inicio</a>
            </li>
          

            @if (Model.Perfil == LTMSistem.Enuns.PerfilEnum.Administrador || Model.Perfil == LTMSistem.Enuns.PerfilEnum.Secretaria)
            {
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Consulta" asp-action="Index">Consultas</a>
                </li>
            }


           
            @if (Model.Perfil == LTMSistem.Enuns.PerfilEnum.Administrador)
            {
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Usuario" asp-action="Index">Usuários</a>
                </li>
            }

            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Paciente" asp-action="Index">Pacientes</a>
            </li>
            <li class="nav-item ms-lg-3">
                <a type="button" class="btn btn-warning position-relative rounded-pill text-white" asp-controller="Lembrete" asp-action="Index">
                    Lembretes
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @(Model.Lembretes!= null && Model.Lembretes.Any() ? Model.Lembretes.Count() : 0 )
                        <span class="visually-hidden">unread messages</span>
                    </span>
                </a>
            </li>
            <li class="nav-item ms-lg-3">
                <a class="nav-link text-white" asp-controller="Login" asp-action="Sair">Sair</a>
            </li>
        </ul>
    </div>
</div>

