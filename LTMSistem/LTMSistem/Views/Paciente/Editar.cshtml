@model PacienteModel

@{
    ViewData["Title"] = "Editar Paciente";
}


<div class="container">
    <form class="bg-form mt-5 form-defult shadow-lg" asp-controller="Paciente" asp-action="Alterar" method="post">
        <div class="row">
            <input type="hidden" asp-for="Id" />
            <div class="mt-3 col-md-7 mb-2 form-  p-1">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" id="nome" class="form-control" asp-for="Nome"  required value="@Model.Nome">
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
            <div class=" col-md-5 mb-2 p-1 mt-3">
                <label for="example-date" class="form-label">Data Nascimento</label>
                <input class="form-control" id="example-date" required asp-for="Nascimento" type="date" />
                @Html.ValidationMessageFor(x => x.Nascimento)
            </div>

            <div class="mb-3 col-md-7 p-1">
                <label for="example-email" class="form-label">Email</label>
                <input type="email" id="example-email" asp-for="Email" Value="@Model.Email" class="form-control" placeholder="Email">
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="mb-3 col-md-5  p-1">
                <label for="example-email" class="form-label">Telefone</label>
                <input type="tel" id="example-email" asp-for="Telefone" value="@Model.Telefone" required class="form-control" placeholder="(xx) xxxxx-xxxx">
                @Html.ValidationMessageFor(x => x.Telefone)
            </div>

            <div class="col-sm-6 col-md-5 mb-2  p-1">
                <label for="example-email" class="form-label">Rua</label>
                <input type="text" class="form-control" asp-for="Rua" placeholder="Rua" value="@Model.Rua" aria-label="rua">
            </div>
            <div class="col-sm-6 col-md-5 mb-2  p-1">
                <label for="example-email" class="form-label">Bairro</label>
                <input type="text" class="form-control" asp-for="Bairro" placeholder="Bairro" value="@Model.Bairro" aria-label="bairro">
            </div>
            <div class="col-sm-5 col-md-2 mb-2  p-1">
                <label for="example-email" class="form-label">Nº</label>
                <input type="text" class="form-control" asp-for="Numero" placeholder="Nº" value="@Model.Numero" aria-label="numero">
            </div>
            <div class="col-sm-7 col-md-3 mb-2  p-1 ">
                <label for="example-email" class="form-label">Complemento</label>
                <input type="text" class="form-control" asp-for="Complemento" placeholder="Complemento" value="@Model.Complemento" aria-label="complemento">
            </div>
            <div class="col-sm-6 col-md-6 mb-2  p-1">
                <label for="example-email" class="form-label">Cidade</label>
                <input type="text" class="form-control" asp-for="Cidade" placeholder="Cidade" value="@Model.Cidade" aria-label="cidade">
            </div>
            <div class="col-sm-6 col-md-3 mb-2  p-1">
                <label for="example-email" class="form-label">Estado</label>
                <input type="text" class="form-control" asp-for="Estado" placeholder="Estado" value="@Model.Estado" aria-label="estado">
            </div>
        </div>



        <div>
            <div class="mb-3 mb-3 p-1 ">
                <label for="example-textarea" class="form-label">Obs:</label>
                <textarea class="form-control" id="example-textarea" asp-for="Observacao" rows="5">@Model.Observacao</textarea>
            </div>

        </div>




        <div class="d-grid gap-2 col-6 mx-auto">
            <button type="submit" class="btn btn-editar btn-center text-white" role="button" >Alterar</button>
            <a class="btn btn-warning btn-center" asp-controller="Paciente" asp-action="Mostrar" asp-route-id="@Model.Id" >Voltar</a>
            <a class="btn btn-danger btn-center" asp-controller="Paciente" asp-action="ApagarConfirmacao" asp-route-id="@Model.Id" >Apagar</a>

        </div>
    </form>
</div>
